---
import { getIconComponent } from "../../../icons/IconAll.astro";

type Technology = {
  icon?: string;
};

export interface Props {
  title: string;
  img: string;
  description: string;
  technologies?: Technology[];
  link: string;
}

const { technologies, title, img, description, link } = Astro.props;
---

<li class="li-project">
  <img src={img} alt={title} loading="lazy" class="project-image" />
  <div class="project-content">
    <h3 class="project-title">{title}</h3>
    <p class="project-description">{description}</p>
    <p class="project-technologies-title">Tecnologías usadas</p>
    <div class="project-technologies">
      {
        technologies?.map(({ icon }) => {
          const IconComponent = getIconComponent(icon);
          return <span class="technology-icon">{IconComponent && <IconComponent />}</span>;
        })
      }
    </div>
    <a href={link} target="_blank" class="project-link">Ver más</a>
  </div>
</li>

<style>
  .li-project {
    list-style: none;
    background: linear-gradient(145deg, #1c1c24, #23232d);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.4);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    height: 100%;
    max-width: 500px; /* Fijamos un ancho máximo */
    min-height: 450px; /* Altura mínima para las cards */
  }

  .li-project:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.6);
  }

  .project-image {
    width: 100%;
    height: 240px;
    object-fit: cover;
    border-bottom: 2px solid #0099ff;
    transition: opacity 0.3s ease;
  }

  .li-project:hover .project-image {
    opacity: 0.9;
  }

  .project-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%; /* Asegura que el contenido ocupe todo el espacio disponible */
  }

  .project-title {
    font-size: 22px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 10px;
    text-transform: capitalize;
    font-family: "Nunito Sans", serif;
  }

  .project-description {
    font-size: 16px;
    color: #b0b0b0;
    line-height: 1.5;
    margin-bottom: 20px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-family: "Roboto", sans-serif;
  }

  .project-technologies-title {
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 10px;
  }

  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 20px; /* Espacio antes del botón */
  }

  .technology-icon {
    font-size: 24px;
    color: #0099ff;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .technology-icon:hover {
    transform: scale(1.2);
    color: #00ccff;
  }

  .project-link {
    margin-top: auto; /* Empuja el botón hacia el fondo */
    padding: 12px 18px;
    text-align: center;
    background: linear-gradient(90deg, #0099ff, #00ccff);
    color: #ffffff;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    transition: background 0.3s ease, box-shadow 0.3s ease;
  }

  .project-link:hover {
    background: linear-gradient(90deg, #00ccff, #0099ff);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  }
</style>
