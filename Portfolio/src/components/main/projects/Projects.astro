---
import { projects } from "../../../const/const";
import Project from "./Project.astro";
---

<section class="section-projects">
  <div class="linear-grandient-1"></div>
  <div class="container-projects shadow-lg rounded-lg">
    <h2 class="text-4xl py-4 title-projects" id="proyectos">Proyectos</h2>
    <p class="text-lg nunito text-[#e2e8f0] opacity-90">
      Algunos de mis principales proyectos.
    </p>
    <div>
      <ul class="ul-projects">
        {
          projects.map(
            ({ description, img, link, technologies, title, link2 }) => (
              <Project
                img={img}
                description={description}
                link={link}
                link2={link2}
                title={title}
                technologies={technologies}
              />
            )
          )
        }
      </ul>
    </div>
  </div>
</section>

<style>
  .linear-grandient-1 {
    position: absolute;
    left: 0;
    top: 1px;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, #0099ff, #000);
    z-index: 0;
  }

  .section-projects {
    position: relative;
    background-color: #111111;
    overflow: hidden;
    padding-top: 2rem;
  }

  .container-projects {
    position: relative;
    width: 90%;
    margin: 0 auto;
    max-width: 1355px;
  }
  .title-projects {
    font-size: 32px;
    font-weight: 800;
    color: #f8fafc;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ul-projects {
    position: relative;
    display: grid;
    place-items: center;
    padding: 40px 0;
    width: 100%;
    height: 100%;
  }
  .ul-projects a {
    text-decoration: none;
  }

  /* responsive */

  @media (min-width: 300px) {
    .ul-projects {
      grid-template-columns: 1fr;
      gap: 50px;
    }
  }
  @media (min-width: 700px) {
    .ul-projects {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }
  @media (min-width: 1200px) {
    .ul-projects {
      grid-template-columns: repeat(3, 1fr);
      justify-content: space-between;
    }
  }
</style>
